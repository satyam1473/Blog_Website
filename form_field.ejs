<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%=article.title%>" type="text" name="title" class="form-control">
</div><br><br>
<div class="form-group">
    <label for="description">Description</label>
    <textarea rows="6" name="description" id="description" class="form-control"><%=article.description%></textarea>
</div><br><br>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea rows="7" required name="markdown" id="markdown" class="form-control"><%=article.markdown%></textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>